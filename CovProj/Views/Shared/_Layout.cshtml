<!DOCTYPE html>
<html>
<head>
    <script>
        function goBack() {
                 window.history.back()
        }
    </script>
    <header>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
            body {
                font-family: Arial, Helvetica, sans-serif;
            }

            .navbar {
                width: 100%;
                background-color: #555;
                overflow: auto;
            }

                .navbar a {
                    float: left;
                    padding: 12px;
                    color: white;
                    text-decoration: none;
                    font-size: 17px;
                }

                    .navbar a:hover {
                        background-color: #000;
                    }

            .active {
                background-color: #4CAF50;
            }

            screen and (max-width: 500px) {
                .navbar a

            {
                float: none;
                display: block;
            }
            }
        </style>
        <div>
            <div class="navbar">
                <a class="active" href="/Home/Index"><i class="fa fa-fw fa-home"></i> Home</a>
                @*<a href="#"><i class="fa fa-fw fa-search"></i> Search</a>*@
                <a href="/Home/Contact"><i class="fa fa-fw fa-search"></i> DriveIn sites</a>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Username"] == null)
                    {
                        <a href="/Home/Login"><i class="fa fa-fw fa-user"></i> Login</a>
                        <a href="/Peoples/Create"><i class="fa fa-fw fa-user"></i>Register</a>
                    }
                    @if (Session["Username"] != null)
                    {
                        <a href="/Home/Logout"><i class="fa fa-fw fa-user"></i> Logout</a>
                    }
                </ul>
            </div>
        </div>
    </header>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
