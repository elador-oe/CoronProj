    }
</style>

<div id="map"></div>

<script>
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: {
                lat: 32.057472, lng: 34.857500
            },
            zoom: 17,
            disableDefaultUI: true
        });
    }</script>


<script async defer
